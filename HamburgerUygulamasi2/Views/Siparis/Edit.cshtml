@model Tuple<List<HamburgerUygulamasi2.Entity.SepetUrun>,HamburgerUygulamasi2.Entity.Siparis>

@{
    ViewData["Title"] = "Edit";
}

<h1>Siparişi Düzenle</h1>

    <div class="form-control">
        <h4>Sipariş</h4>
        <hr />
        <dl class="row">
            @foreach (var item in Model.Item1)
            {
                <dt class="col-sm-2">
                    <span>Menü Adı</span>
                </dt>
                <dd class="col-sm-10">
                    <span>@item.Menu.MenuAdi</span>
                </dd>
                <dt class="col-sm-2">
                    <span>Menü Fiyatı</span>
                </dt>
                <dd class="col-sm-10">
                    <span>@item.Menu.MenuFiyati</span>
                </dd>
                <dt class="col-sm-2">
                    <span>Sipariş Boyutu</span>
                </dt>
                <dd class="col-sm-10">
                    <span>@item.boyut</span>
                </dd>
                <dt class="col-sm-2">
                    <span>Sipariş Miktarı</span>
                </dt>
                <dd class="col-sm-10">
                    <span>@item.Miktar</span>
                </dd>
                <dt class="col-sm-2">
                    <span>Sipariş Ara Toplam Fiyat</span>
                </dt>
                <dd class="col-sm-10">
                    <span>@item.AraToplamFiyat</span>
                </dd>
                <br />
                <br />
            <form asp-controller="SepetUruns" asp-action="Edit" method="get" style="display:inline">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-success"> Ürünleri Düzenle</button>
                </form>
            <form asp-controller="SepetUruns" asp-action="Delete" method="get" style="display:inline">
                    <input type="hidden" name="id" value="@item.Id" />
                <button type="submit" class="btn btn-success"> Ürünleri Sil</button>
                </form>
            }
        <form asp-controller="Menu" asp-action="Index" method="get" style="display:inline">
            
            <button type="submit" class="btn btn-success"> Ürün Eklemek İçin Menüye Dön</button>
        </form>
<dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Item2.SiparisToplamTutar)
</dt>
<dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.Item2.SiparisToplamTutar)
</dd>
<dt class="col-sm-2">
    <span>Sipariş Onaylandı Mı?</span>
</dt>
<dd class="col-sm-10">
                @Html.CheckBoxFor(Model => Model.Item2.SiparisOnayliMi)
</dd>
<dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Item2.Aciklama)
</dt>
<dd class="col-sm-10">
                @Html.TextAreaFor(Model => Model.Item2.Aciklama)
</dd>
    </dl>
</div>

<div>
    <button class="btn btn-warning">Güncelle</button>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
