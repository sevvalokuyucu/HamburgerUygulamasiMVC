@using HamburgerUygulamasi2.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@model IEnumerable<HamburgerUygulaması.Entity.Menu>
@inject UserManager<User> _userManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuFiyati)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuFiyati)
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
                <td>
                    <a asp-action="SepeteEkle" asp-route-id="@item.Id">Sepete Ekle</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

