@model HamburgerUygulamasi2.Models.MenuViewModel

@{
    ViewData["Title"] = "Create";
}
@{
    var malzemeListesi = TempData["Malzemeler"] as List<HamburgerUygulamasi2.Entity.Malzeme>;
}
<h1>Create</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MenuAdi" class="control-label"></label>
                <input asp-for="MenuAdi" class="form-control" />
                <span asp-validation-for="MenuAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuFiyati" class="control-label"></label>
                <input asp-for="MenuFiyati" class="form-control" />
                <span asp-validation-for="MenuFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" type="file" id="ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div>
                <label for="malzemeler">Malzemeler:</label>
                <select id="malzemeler" name="secilenMalzemeler[]" multiple="multiple" class="form-control">
                    @if (malzemeListesi != null)
                    {
                        foreach (var malzeme in malzemeListesi)
                        {
                            <option value="@malzeme.Id">@malzeme.MalzemeAdi</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
