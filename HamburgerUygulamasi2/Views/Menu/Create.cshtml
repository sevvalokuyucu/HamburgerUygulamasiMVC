@model HamburgerUygulamasi2.Entity.Menu

@{
    ViewData["Title"] = "Create";
    var malzemeler = ViewBag.Malzemeler;
}

<h1>Create</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MenuAdi" class="control-label"></label>
                <input asp-for="MenuAdi" class="form-control" />
                <span asp-validation-for="MenuAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuFiyati" class="control-label"></label>
                <input asp-for="MenuFiyati" class="form-control" />
                <span asp-validation-for="MenuFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MenuMalzemeleri">Malzemeler:</label>
                <select id="MenuMalzemeleri" name="selectedMalzemeler" multiple class="form-control">,
                    @if(malzemeler!=null)
                    {
                    @foreach (var malzeme in malzemeler)
                    {
                    <option value="@malzeme.Id">@malzeme.MalzemeAdi</option>
                    } 
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
