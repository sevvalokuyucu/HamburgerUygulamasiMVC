@model HamburgerUygulamasi2.Models.MenuViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MenuAdi" class="control-label"></label>
                <input asp-for="MenuAdi" class="form-control" />
                <span asp-validation-for="MenuAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuFiyati" class="control-label"></label>
                <input asp-for="MenuFiyati" class="form-control" />
                <span asp-validation-for="MenuFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label> Image Name: @ViewBag.ImageName </label>

                <input asp-for="ImageUrl" />

            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
